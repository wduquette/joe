// Tests for the `for` statement.
//
// Language tests should confine themselves to the basic test API.

function testBasic() {
    var sum = 0;

    for (var i = 1; i <= 3; i = i + 1) {
        sum = sum + i;
    }
    assertEQ(sum, 6);
}

function testNoInitializer() {
    var sum = 0;
    var i = 1;

    for (; i <= 3; i = i + 1) {
        sum = sum + i;
    }
    assertEQ(sum, 6);
}

function testNoUpdater() {
    var sum = 0;

    for (var i = 1; i <= 3;) {
        sum = sum + i;
        i = i + 1;
    }
    assertEQ(sum, 6);
}


function testBreak() {
    var sum = 0;
    for (var i = 1; i <= 10; i = i + 1) {
        sum = sum + i;
        if (i == 3) break;
    }
    assertEQ(sum, 6);
}

function testNoCondition() {
    var sum = 0;
    for (var i = 1; ; i = i + 1) {
        sum = sum + i;
        if (i == 3) break;
    }
    assertEQ(sum, 6);
}

function testContinue() {
    var sumBefore = 0;
    var sumAfter = 0;
    for (var i = 1; i <= 6; i = i + 1) {
        sumBefore = sumBefore + i;
        if (i > 3) continue;
        sumAfter = sumAfter + i;
    }
    assertEQ(sumBefore, 21);
    assertEQ(sumAfter, 6);
}
