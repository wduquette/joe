//-----------------------------------------------------------------------------
// mappers

function s2n(s) {
    return (s ~ String())? Number(s) : null;
}

function testAddMapper() {
    var nero = Nero();
    nero.addMapper(#s2n, s2n);
    var results = nero.withRules(ruleset {
        define transient Str/s;
        define Num/n;
        Str("123");
        Num(n) :- Str(s), mapsTo(#s2n, s, n);
    }).infer();

    assertEQ(nero.toNeroScript(results).strip(), """
        define Num/n;
        Num(123);
        """);
}

function testAddMappers() {
    var nero = Nero();
    nero.addMappers({#s2n: s2n});
    var results = nero.withRules(ruleset {
        define transient Str/s;
        define Num/n;
        Str("123");
        Num(n) :- Str(s), mapsTo(#s2n, s, n);
    }).infer();

    assertEQ(nero.toNeroScript(results).strip(), """
        define Num/n;
        Num(123);
        """);
}

//-----------------------------------------------------------------------------
// toNero*

// toNeroScript is tested in-line above.

function testToNeroAxiom() {
    var nero = Nero();
    var rules = ruleset {
        define Parent/p,c;
        Parent(#anne, #bert);
        Parent(#bert, #clark);
    };
    var facts = nero.withRules(rules).infer();
    var list = facts.map(nero.toNeroAxiom).sorted();
    assertEQ(list, [
        "Parent(#anne, #bert);",
        "Parent(#bert, #clark);",
    ]);
}
