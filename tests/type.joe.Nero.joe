// type.joe.Nero.joe

//-----------------------------------------------------------------------------
// Pipeline Execution

function testDebug() {
    var nero = Nero();
    var rules = ruleset {
        define Parent/p,c;
        Parent(#anne, #bert);
    };
    
    // Just verify that the debug flag can be set.
    nero.withRules(rules).debug().debug(false);
}

function testInfer() {
    var nero = Nero();
    var rules = ruleset {
        define Parent/p,c;
        define Ancestor/a,d;
        Parent(#anne, #bert);
        Parent(#bert, #clark);
        Ancestor(x, y) :- Parent(x, y);
        Ancestor(x, y) :- Parent(x, z), Ancestor(z, y);
    };
    var results = nero.toNeroScript(nero.withRules(rules).infer()).strip();
    assertEQ(results, """
        define Ancestor/a,d;
        Ancestor(#anne, #bert);
        Ancestor(#anne, #clark);
        Ancestor(#bert, #clark);
        
        define Parent/p,c;
        Parent(#anne, #bert);
        Parent(#bert, #clark);
        """);
}

