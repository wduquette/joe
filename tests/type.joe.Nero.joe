// Should accept class instances with fields, provided that 
// named-field atoms are used to match them.
function testWith_class_named() {
    class Parent {
        method init(p, c) {
            @p = p;
            @c = c;
        }
        method toString() {
            return "Parent(" + @p + ", " + @c + ")";
        }
    }

    var inputs = [
        Parent(#anne, #bert),
        Parent(#bert, #clark)
