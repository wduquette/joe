// Tests for the `if` statement.
//
// Language tests should confine themselves to the basic test API.

function testIf() {
    var a = #unset;
    var b = #unset;

    if (true) a = #set;
    if (false) b = #set;

    assertEQ(a, #set);
    assertEQ(b, #unset);
}

function testIfElse() {
    function get(value) {
        if (value) {
            return #true;
        } else {
            return #false;
        }
    }
    assertEQ(get(true), #true);
    assertEQ(get(false), #false);
}

function testIfElseIfElse() {
    function get(value) {
        if (value == 1) {
            return #a;
        } else if (value == 2) {
            return #b;
        } else {
            return #c;
        }
    }
    assertEQ(get(1), #a);
    assertEQ(get(2), #b);
    assertEQ(get(3), #c);
}
