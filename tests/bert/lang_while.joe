// Tests the `while` statement

function testWhile_simple() {
    var sum = 0;
    var i = 0;
    while (i < 4) {
        i = i + 1;
        sum = sum + i;
    }

    assertEquals(i, 4);
    assertEquals(sum, 10);
}

