// lang_switch: switch statement tests.

function testSimple() {
    function cases(x) {
        switch (x) {
            case 1 -> return "a";
            case 2 -> return "b";
            case 3 -> return "c";
            default -> return "?";
        }
    }

    assertEquals(cases(1), "a");
    assertEquals(cases(2), "b");
    assertEquals(cases(3), "c");
    assertEquals(cases(4), "?");
}

