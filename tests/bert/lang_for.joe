// Tests for the `for` statement.
//
// Language tests should confine themselves to the basic test API.

function testBasic() {
    var sum = 0;

    for (var i = 1; i <= 3; i = i + 1) {
        sum = sum + i;
    }
    assertEquals(sum, 6);
}

function testNoInitializer() {
    var sum = 0;
    var i = 1;

    for (; i <= 3; i = i + 1) {
        sum = sum + i;
    }
    assertEquals(sum, 6);
}

function testNoUpdater() {
    var sum = 0;

    for (var i = 1; i <= 3;) {
        sum = sum + i;
        i = i + 1;
    }
    assertEquals(sum, 6);
}

