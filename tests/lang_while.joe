// Tests the `while` statement

function testWhile_simple() {
    var sum = 0;
    var i = 0;
    while (i < 4) {
        i = i + 1;
        sum = sum + i;
    }

    assertEQ(i, 4);
    assertEQ(sum, 10);
}

function testWhile_continue() {
    var sum = 0;
    var i = 0;
    while (i < 4) {
        i = i + 1;
        if (i == 2) continue;
        sum = sum + i;
    }

    assertEQ(i, 4);
    assertEQ(sum, 8);  // 1 + 3 + 4
}


function testWhile_break_noLocals() {
    var sum = 0;
    var i = 0;
    while (i < 4) {
        i = i + 1;
        if (i == 3) {
            break;
        }
        sum = sum + i;
    }

    assertEQ(i, 3);
    assertEQ(sum, 3);
}

function testWhile_break_locals() {
    var sum = 0;
    var i = 0;
    while (i < 4) {
        i = i + 1;
        var x = 2*i;

        if (i == 3) {
            break;
        }
        sum = sum + x;
    }

    assertEQ(i, 3);
    assertEQ(sum, 6);
}
